<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Fragment.BottomNav.ProfileFragment">

    <include
        android:id="@+id/xToolbar"
        layout="@layout/layout_toolbar" />

    <TextView
        android:id="@+id/xDetails"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/xToolbar"
        android:background="@color/grey"
        android:fontFamily="@font/montserrat"
        android:padding="20dp"
        android:text="Shop Details"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:textStyle="bold" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/xDetails"
        android:background="@color/white">

        <com.google.android.material.tabs.TabLayout
            android:id="@+id/xProfileTabLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:orientation="horizontal"
            app:tabGravity="start"
            app:tabIndicatorColor="@color/blue"
            app:tabIndicatorGravity="stretch"
            app:tabSelectedTextColor="@color/white"
            app:tabTextColor="@color/subText" />

        <androidx.viewpager.widget.ViewPager
            android:id="@+id/xProfileViewPager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/xProfileTabLayout" />

    </RelativeLayout>

</RelativeLayout>